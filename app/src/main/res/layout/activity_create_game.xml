<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.CreateGameActivity">

    <ImageView
        android:id="@+id/img_red_attack_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_versus"
        app:layout_constraintRight_toLeftOf="@+id/txt_versus"
        app:srcCompat="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/img_red_defense_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toTopOf="@+id/txt_versus"
        app:layout_constraintLeft_toRightOf="@+id/txt_versus"
        app:srcCompat="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/img_blue_attack_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/txt_versus"
        app:layout_constraintTop_toBottomOf="@+id/txt_versus"
        app:srcCompat="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/img_blue_defense_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/txt_versus"
        app:layout_constraintTop_toBottomOf="@+id/txt_versus"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/txt_versus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="VS"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Start pGameEntity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_versus"/>

</android.support.constraint.ConstraintLayout>
