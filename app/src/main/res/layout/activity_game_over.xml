<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context="io.funatwork.view.activity.GameOverActivity">


    <ImageView
        android:id="@+id/img_trophy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_winners"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_world_cup"/>

    <TextView
        android:id="@+id/tv_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Game over!"
        app:layout_constraintBottom_toTopOf="@+id/btn_new_game"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_winners"/>

    <LinearLayout
        android:id="@+id/layout_winners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tv_congrats"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_trophy">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_player_red_attack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:transitionName="redAttackPlayer"
                app:srcCompat="@drawable/ic_user"/>

            <ImageView
                android:id="@+id/img_player_red_defense"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:transitionName="redDefensePlayer"
                app:srcCompat="@drawable/ic_user"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_score_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over_initial_score"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:textSize="32sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="@string/game_over_score_separator"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/tv_score_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over_initial_score"
            android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
            android:textSize="32sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_player_blue_attack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:transitionName="blueAttackPlayer"
                app:srcCompat="@drawable/ic_user"/>

            <ImageView
                android:id="@+id/img_player_blue_defense"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:transitionName="blueDefensePlayer"
                app:srcCompat="@drawable/ic_user"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="New game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_congrats"/>

</android.support.constraint.ConstraintLayout>
