<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.GameActivity">

    <ImageView
        android:id="@+id/img_table_soccer"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_table_soccer"/>

    <ImageView
        android:id="@+id/img_player_red_defense"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/img_table_soccer"
        app:layout_constraintLeft_toLeftOf="@+id/img_table_soccer"
        app:srcCompat="@drawable/ic_soccer_player_green"/>

    <ImageView
        android:id="@+id/img_player_red_attack"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/img_table_soccer"
        app:layout_constraintRight_toRightOf="@+id/img_table_soccer"
        app:srcCompat="@drawable/ic_soccer_player_green"/>

    <ImageView
        android:id="@+id/img_player_blue_attack"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/img_table_soccer"
        app:layout_constraintTop_toBottomOf="@+id/img_table_soccer"
        app:srcCompat="@drawable/ic_soccer_player_red"/>

    <ImageView
        android:id="@+id/img_player_blue_defense"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/img_table_soccer"
        app:layout_constraintTop_toBottomOf="@+id/img_table_soccer"
        app:srcCompat="@drawable/ic_soccer_player_red"/>

    <TextView
        android:id="@+id/tv_score_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/img_table_soccer"
        app:layout_constraintLeft_toRightOf="@+id/img_player_red_defense"
        app:layout_constraintRight_toLeftOf="@+id/img_player_red_attack"
        app:layout_constraintTop_toTopOf="@+id/img_player_red_defense"/>

    <TextView
        android:id="@+id/tv_score_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="0"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_player_blue_defense"
        app:layout_constraintLeft_toRightOf="@+id/img_player_blue_attack"
        app:layout_constraintRight_toLeftOf="@+id/img_player_blue_defense"
        app:layout_constraintTop_toBottomOf="@+id/img_table_soccer"/>
</android.support.constraint.ConstraintLayout>
