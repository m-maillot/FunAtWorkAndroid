<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlueTeamLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.GameActivity">

    <ImageView
        android:id="@+id/background_splitter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:orientation="horizontal"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_splitter">
    </ImageView>

    <LinearLayout
        android:id="@+id/layout_player_red_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_player_red_attack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="redAttackPlayer"
            app:srcCompat="@drawable/ic_user"/>

        <ImageView
            android:id="@+id/img_red_attack_goal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_gamelle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_player_red_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/img_player_red_defense"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="redDefensePlayer"
            app:srcCompat="@drawable/ic_user"/>

        <ImageView
            android:id="@+id/img_red_defense_goal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_gamelle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_player_blue_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="64dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/background_splitter">

        <ImageView
            android:id="@+id/img_player_blue_defense"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="blueDefensePlayer"
            app:srcCompat="@drawable/ic_user"/>

        <ImageView
            android:id="@+id/img_blue_defense_goal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_gamelle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_player_blue_attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_player_blue_attack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="blueAttackPlayer"
            app:srcCompat="@drawable/ic_user"/>

        <ImageView
            android:id="@+id/img_blue_attack_goal"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/ic_gamelle"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_score_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/game_initial_score"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/layout_player_red_defense"
        app:layout_constraintLeft_toLeftOf="@+id/layout_player_red_defense"
        app:layout_constraintRight_toRightOf="@+id/layout_player_red_attack"
        app:layout_constraintTop_toBottomOf="@+id/layout_player_red_attack"/>

    <TextView
        android:id="@+id/tv_score_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_initial_score"
        android:textColor="@color/colorPrimaryText"
        android:textAppearance="@android:style/TextAppearance.Material.WindowTitle"
        android:textSize="32sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/layout_player_blue_attack"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_player_blue_defense"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/layout_player_blue_defense"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_player_blue_attack"/>

</android.support.constraint.ConstraintLayout>
