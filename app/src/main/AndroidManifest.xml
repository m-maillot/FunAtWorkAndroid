<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="io.funatwork">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".FwtApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_football"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:allowBackup">
        <activity
            android:name=".SplashscreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.activity.CreateGameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.activity.GameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.activity.GameOverActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.activity.StartGameActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.activity.HistoryActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.activity.StatsActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>